#!/usr/bin/env perl

use strict;
use warnings;
use Shipwright;
use Shipwright::Script;
use Cwd;

local $SIG{INT} = sub { warn "Stopped\n"; exit; };

my $cwd = getcwd;
$ENV{SHIPWRIGHT_MAKE} ||= 'make';
$ENV{SHIPWRIGHT_SVK} ||= 'svk';
$ENV{SHIPWRIGHT_SVN} ||= 'svn';
$ENV{SHIPWRIGHT_GIT} ||= 'git';
$ENV{PERL_MM_USE_DEFAULT} ||= 1;
Shipwright::Script->dispatch();
chdir $cwd;
